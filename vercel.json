{
    "version": 2,
        "builds": [
            {
                "src": "server.js",
                "use": "@vercel/node"
            },
            {
                "src": "/*.(html|css|js|jpg|jpeg|png|gif|svg|ico)",
                "use": "@vercel/static"
            }
        ],
            "routes": [
                {
                    "src": "/send-email",
                    "dest": "server.js"
                },
                {
                    "src": "/(.*)",
                    "dest": "/$1"
                }
            ]
}
